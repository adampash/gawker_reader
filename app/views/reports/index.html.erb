<% if current_user.politburo? %>
  Hey Politburo member! <%= link_to "+ Create a new report", build_report_path(@site) %>
<% end %>

<% if @reports.empty? %>
  <h4>No reports filed for <%= @site.upcase %> yet.</h4>
<% else %>
  <% @reports.each do |report| %>
    <%= link_to report.name, report_path(report) %>
  <% end %>
<% end %>
