<div class="comment politburo_comment">
  <div class="user">
    <% if (defined? anonymize) and anonymize %>
      <h5 class="name">Politburo comment</h5>
    <% else %>
      <h5 class="name"><%= comment.user.name %></h5>
      <%= image_tag comment.user.avatar %>
    <% end %>
  </div>
  <% if @pinnable and current_user.politburo %>
    <h5 class="pin">
      Use in report: <a href="#" class="toggle" data-url="/comments/pin/<%= comment.id %>" data-key="pinned" data-val="<%= comment.pinned %>">
        <%= comment.pinned? ? "Yes" : "No" %>
      </a>
    </h5>
  <% end %>
  <div class="text">
    <%= raw simple_format comment.text %>
  </div>
</div>
